@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 style="margin-top:30px;">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4" style="margin-top:40px;">
        <section>
            <form id="account" method="post">
                <h4 style="color: #71b100;">Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" placeholder="abc123@gmail.com"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" placeholder="********"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-8">
        <div class="float-left"><img style="max-width:700px;border:none;margin-left:50px;margin-top:-65px;" class="img-fluid img-thumbnail" src="~/Images/Back to School funny reader books study paper plane book reading schoo.gif" alt="BookBuddy"></div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
