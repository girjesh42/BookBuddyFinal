<section class="mb-2" style="position:relative;top:1em">
    <div class="container-fluid m-1">
        <div class="row ">
            <!-- Product picture -->
            <div class="col-sm-5">
                <div class="thumbnail m-1">
                    <div style="text-align:center;margin-right:100px;">
                        <img style="padding:2rem;" src=@("/Images/"+Model.ProductPic) class="img-responsive p-3 justify-content-md-center" alt="">
                    </div>
                    <div class="caption m-1">
                        <div class="row buttons m-1">
                            <form method="post" asp-action="AddToCart" asp-controller="Cart">
                                <input type="hidden" value="@(Model.ProductId)" name="productId" />
                                <input type="hidden" value="no" name="redirect" />


                                @if (Model.IsAvailable && Model.Quantity >= 0)
                                {
                                    <button type="submit" id="addToCart" class="btn btn-lg btn-primary" style="white-space: nowrap;"><i class="fas fa-cart-arrow-down"></i>&nbsp;&nbsp; ADD TO CART</button> }
                                else
                                {
                                    <button type="submit" id="addToCart" class="btn btn-lg btn-primary" disabled><i class="fas fa-cart-arrow-down"></i>&nbsp;&nbsp; ADD TO CART</button>}
                            </form>

                        </div>

                    </div>
                </div>

            </div>

            <!-- Product Description -->
            <div class="col-sm-7 desc">

                <div>

                    <h4>@(Model.ProductName)</h4>

                    <div class="row">
                        <div class="col-sm-6">
                            <strong> Rating</strong>&nbsp; <span class="fa fa-star star-active"></span>3.00
                        </div>


                    </div>

                    <div>
                        <h3><i class="fas fa-rupee-sign"></i> @(Model.Price)</h3>
                    </div>

                    <div>

                        <h5><i class="fas fa-tags"></i> Cash On Delivery <a href="">T&C</a></h5>
                        <h5><i class="fas fa-tags"></i> 7 Days return policy <a href="">T&C</a></h5>
                        <h5>
                            <i class="fas fa-tags"></i> Stock Availability :
                            @if (Model.IsAvailable)
                            {
                <span class="text-success">Hurry up!! Just @(Model.Quantity)&nbsp; Books left in stock</span> }
                            else
                            {
                <span class="text-danger">Currently This book is not available </span>}
                        </h5>

                    </div>
                    <br><br>

                    <div id="highlights">
                        <strong class="col-xs-3">Highlights</strong>
                        <ul class="col-xs-6">
                            <li>  @(Model.MetaTitle)</li>
                            <li>  @(Model.ProductType)</li>

                        </ul>
                    </div>
                    <div id="seller">
                        <strong class="col-xs-3">Seller Info</strong>
                        <ul class="col-xs-6">
                            <li>  @(Model.Vendor.UserFname)</li>
                            <li>  @(Model.Vendor.UserEmail)</li>
                        </ul>
                    </div>

                </div>
                <br><br>

                <div class="container col-xs-12" style="margin-top:50px;">


                    <!-- Specifications -->

                    <div class="panel panel-default" id="specifications">
                        <div class="panel-heading" style="background-color:#fff;">
                            <h3>Specifications</h3>
                        </div>
                        <hr />
                        <div class="panel-body">

                            <h5>Book Details</h5>

                            <table class="table table-default">
                                <tbody>
                                    <tr>
                                        <td class="col-md-3 col-sm-3 ">Genre</td>
                                        <td class="col-md-9 col-sm-9 text-left">
                                            @(Model.ProductSummery)
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="col-md-3 col-sm-3">Meta Title</td>
                                        <td class="col-md-9 col-sm-9 text-left">
                                            @(Model.MetaTitle)
                                        </td>
                                    </tr>

                                    <tr><td class="col-md-3 col-sm-3">Product type</td>  <td class="col-md-9 col-sm-9 text-left">@(Model.ProductType)</td></tr>


                                </tbody>

                            </table>

                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>
</section>
